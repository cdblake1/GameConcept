{
  "json.schemas": [
    {
      "fileMatch": [
        "*/*.schema.jsonc"
      ],
      "url": "https://json-schema.org/draft/2020-12/schema"
    },
    {
      "fileMatch": [
        "/src/Content/Skills/*.json",
        "*/Skills/*.json",
        "**/*.skill.json"
      ],
      "url": "./src/Content/Schemas/skill.schema.jsonc"
    },
    {
      "fileMatch": [
        "/src/Content/Effects/*.json",
        "*/Effects/*.json",
        "**/*.effect.json"
      ],
      "url": "./src/Content/Schemas/effect.schema.jsonc"
    },
    {
      "fileMatch": [
        "/src/Content/Talents/*.json",
        "*/Talents/*.json",
        "**/*.talent.json"
      ],
      "url": "./src/Content/Schemas/talent.schema.jsonc"
    },
    {
      "fileMatch": [
        "/src/Content/Classes/*.json",
        "*/Classes/*.json",
        "**/*.class.json"
      ],
      "url": "./src/Content/Schemas/class.schema.jsonc"
    },
    {
      "fileMatch": [
        "/src/Content/ExpTable/*.json",
        "*/ExpTable/*.json",
        "**/*.exp_table.json"
      ],
      "url": "./src/Content/Schemas/exp_table.schema.jsonc"
    },
    {
      "fileMatch": [
        "/src/Content/Item/**/*.json",
        "*/Item/*.json",
        "**/*.item.json"
      ],
      "url": "./src/Content/Schemas/item.schema.jsonc"
    },
    {
      "fileMatch": [
        "/src/Content/LootTable/**/*.json",
        "*/LootTable/*.json",
        "**/*.loot_table.json"
      ],
      "url": "./src/Content/Schemas/loot_table.schema.jsonc"
    },
    {
      "fileMatch": [
        "/src/Content/CraftingRecipe/**/*.json",
        "*/CraftingRecipe/*.json",
        "**/*.crafting_recipe.json"
      ],
      "url": "./src/Content/Schemas/crafting_recipe.schema.jsonc"
    },
    {
      "fileMatch": [
        "/src/Content/StatTemplate/**/*.json",
        "*/StatTemplate/*.json",
        "**/*.stat_template.json"
      ],
      "url": "./src/Content/Schemas/stat_template.schema.jsonc"
    },
    {
      "fileMatch": [
        "/src/Content/Mob/**/*.json",
        "*/Mob/*.json",
        "**/*.mob.json"
      ],
      "url": "./src/Content/Schemas/mob.schema.jsonc"
    },
    {
      "fileMatch": [
        "/src/Content/Encounter/**/*.json",
        "*/Encounter/*.json",
        "**/*.encounter.json"
      ],
      "url": "./src/Content/Schemas/encounter.schema.jsonc"
    }
  ],
  "json.validate.enable": true,
  "json.schemaDownload.enable": true,
  "json.format.enable": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "vscode.json-language-features"
}